<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PesoNaTerra">

    <TextView android:text="@string/asd" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/brh"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/peso"
        android:layout_below="@+id/"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/"
        android:layout_alignEnd="@+id/" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular Peso"
        android:id="@+id/btnCalc"
        android:layout_below="@+id/peso"
        android:layout_toRightOf="@+id/peso"
        android:layout_toEndOf="@+id/peso"
        android:layout_marginTop="72dp" />

</RelativeLayout>
