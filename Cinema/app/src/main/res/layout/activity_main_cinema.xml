<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainCinema"
    android:id="@+id/main">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A1"
            android:id="@+id/btnA1"
            android:background="@drawable/livre"
            android:onClick="reservar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A2"
            android:id="@+id/btnA2"
            android:background="@drawable/livre"
            android:onClick="reservar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A3"
            android:id="@+id/btnA3"
            android:background="@drawable/livre"
            android:onClick="reservar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A4"
            android:id="@+id/btnA4"
            android:background="@drawable/livre"
            android:onClick="reservar" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A5"
            android:id="@+id/btnA5"
            android:background="@drawable/livre"
            android:onClick="reservar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A6"
            android:id="@+id/btnA6"
            android:background="@drawable/livre"
            android:onClick="reservar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A7"
            android:id="@+id/btnA7"
            android:background="@drawable/livre"
            android:onClick="reservar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A8"
            android:id="@+id/btnA8"
            android:background="@drawable/livre"
            android:onClick="reservar" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A9"
                android:id="@+id/btnA9"
                android:background="@drawable/livre"
                android:onClick="reservar" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A10"
                android:id="@+id/btnA10"
                android:background="@drawable/livre"
                android:onClick="reservar" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A11"
                android:id="@+id/btnA11"
                android:background="@drawable/livre"
                android:onClick="reservar" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A12"
                android:id="@+id/btnA12"
                android:background="@drawable/livre"
                android:onClick="reservar" />
        </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="43dp"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="47dp"
        android:layout_below="@+id/space">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RelatÃ³rio"
            android:id="@+id/relatorio"
            android:onClick="relatorio" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/cancelar"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="cancelar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtCancelar"
        android:layout_alignBottom="@+id/cancelar"
        android:layout_toRightOf="@+id/cancelar"
        android:layout_alignRight="@+id/space"
        android:layout_alignEnd="@+id/space" />

</RelativeLayout>
